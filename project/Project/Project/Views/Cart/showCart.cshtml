    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>

@model IEnumerable<Cart>
<body style="background-color:black;">
   
   
<div class="container mt-5 mb-5" style="background-color:#000000">
    <div class="d-flex justify-content-center row">
        <div class="col-md-8">
            <div class="p-2">
                <h2 style="color:white">Food cart</h2>
            </div>

           @foreach (var item in Model)
                            {
            <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white mt-4 px-3 rounded">
                <div class="mr-1"><img class="rounded" src="@Url.Content(@item.Item.ImagePath)" width="80" height="80"></div>
                <div class="d-flex flex-column align-items-center product-details">
                    <span class="font-weight-bold">@item.Item.ItemName</span>
                    <div class="d-flex flex-row product-desc">
                    </div>
                </div>
                <div class="d-flex flex-row align-items-center qty">

                <i onclick="minus(@item.cartID)" class="fa fa-minus text-success"></i><h5 class="text-grey mt-1 mr-1 ml-1">@item.quantity</h5><i onclick="plus(@item.cartID)" class="fa fa-plus text-success"></i>
                </div>
                        <div class="d-flex flex-row align-items-center qty">
                            @{

                                decimal res = @item.Item.ItemPrice*@item.quantity;
                            }
                            <h5 class="text-grey">@res</h5>
                </div>
               <div class="d-flex align-items-center"><i onclick="Delete(@item.cartID)"  class="fa fa-trash mb-1 text-danger"></i></div>





                      @*  <form asp-action="svaeqty" asp-controller="Cart" method="post">
                            <input type="number" name="cartItemId" value="@item.quantity" >
                            <input type="hidden">
                            <input type="submit" value="save">
                        </form>*@
            </div >
            }
            <form asp-controller="Cart" asp-action="Order">
            <div class="d-flex flex-row align-items-center mt-3 p-2 bg-black rounded"><button class="btn btn-warning btn-block btn-lg ml-2 pay-button" type="submit" >Order</button></div>
                </form>
        </div>
    </div>
</div>
